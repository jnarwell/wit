# W.I.T. Environment Configuration Example
# Copy this file to .env and update with your values

# Database
DATABASE_URL=postgresql://wit_user:your_password@localhost/wit_db

# Security
SECRET_KEY=your-very-secure-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Storage
UPLOAD_FOLDER=./wit_storage/uploads
PROJECT_FOLDER=./wit_storage/projects

# Optional: Redis (for caching)
# REDIS_URL=redis://localhost:6379

# Optional: AI Providers
# ANTHROPIC_API_KEY=sk-ant-...
# OPENAI_API_KEY=sk-...
# GEMINI_API_KEY=...

# Optional: OAuth (not fully implemented)
# GOOGLE_CLIENT_ID=...
# GOOGLE_CLIENT_SECRET=...

# Optional: Email (not implemented)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Optional: Machine Discovery
# ENABLE_MACHINE_DISCOVERY=true

# Development
# WIT_DEBUG=true
# LOG_LEVEL=DEBUG