# Database Configuration
DATABASE_URL=postgresql+asyncpg://wit_user:your_secure_password@localhost/wit_db
DB_PASSWORD=your_secure_password

# MQTT Configuration
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# API Configuration
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
RELOAD=true
LOG_LEVEL=info

# Authentication
JWT_SECRET_KEY=your-secret-key-here-change-in-production

# Voice Configuration
WHISPER_MODEL=base
VOICE_LANGUAGE=en
VOICE_SAMPLE_RATE=16000

# Vision Configuration
YOLO_MODEL=yolov8n.pt
CAMERA_COUNT=1
ENABLE_GPU=true

# Hardware Configuration
SERIAL_PORT=/dev/ttyUSB0
NPU_DEVICE=/dev/hailo0

# Feature Flags
DEBUG=true
ENABLE_VOICE=true
ENABLE_VISION=true
ENABLE_SAFETY_CHECKS=true