{
  "name": "wit-universal-desktop-controller",
  "version": "0.1.0",
  "description": "Universal Desktop Controller for W.I.T. platform - manages all desktop integrations",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "test": "jest",
    "lint": "eslint src/"
  },
  "keywords": ["wit", "desktop", "integration", "controller"],
  "author": "W.I.T. Team",
  "license": "MIT",
  "dependencies": {
    "ws": "^8.16.0",
    "chokidar": "^3.5.3",
    "electron-store": "^8.1.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0"
  },
  "build": {
    "appId": "com.wit.universal-desktop-controller",
    "productName": "WIT Desktop Controller",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "plugins/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}